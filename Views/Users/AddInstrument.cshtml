@using MusicDating.Models.ViewModels
@model AddInstrumentVm


@{
    ViewData["Title"] = "Tilføj instrument";
}

<a>Tilbage</a>

<h1>Tilføj instrument</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddInstrument">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="form-group">
                <select asp-for="InstrumentId" class="form-control" asp-items="Model.Instruments">
                    <option value="">Vælg instrument</option>
                </select>
            </div>
            <h2>Hvor øvet er du?</h2>
            <div class="form-group">
                <label class="control-label"></label><span id="rangeInput">: 1</span>
                <input type="range" min="1" max="10" step="1" value="1" asp-for="Level" class="form-control no-padding" onchange="updateVal(this.value)" />
                <span class="text-danger"></span>
            </div>
            <h2>Genrer</h2>
            <div class="form-group">
                <select asp-for="GenreId" class="form-control" asp-items="Model.Genres">
                     <option value="">Vælg genre</option>
                </select>
            </div>
            <input type="hidden" asp-for="ApplicationUser.Id">
            <div class="form-group">
                <input type="submit" value="Tilføj instrument" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
