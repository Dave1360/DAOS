@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Profile";
}

<section class="profile-background">
    @foreach (var user in Model)
    {
        <div class="border-bottom bg-white w-100 mb-3">
            <p class="main-red oswald">@user.UserName</p>
            <p>Member since @user.DateCreated</p>
            <a href="#" class="contact-button text-white btn btn-block rounded-x2 mb-3">Contact</a>
            <a class="btn rounded border-lightgrey shadow-sm m-2 oswald" asp-action="EditProfile"
                asp-route-id="@user.Id">Edit</a>
        </div>
        <div class="border-top bg-white w-100 mb-3 border-bottom">
            <p class="fw-bold main-blue mt-3">Profile description</p>
            <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Perferendis necessitatibus fuga possimus iusto
                corporis
                odit omnis consectetur consequuntur. Inventore nemo perspiciatis debitis alias ab quos animi saepe quasi
                reprehenderit minima!</p>
        </div>
        <div class="border-top bg-white w-100 mb-3 border-bottom">
            <p class="fw-bold main-blue mt-3">@user.UserName's Instruments </p>

            @foreach (var instrument in user.UserInstruments)
            {
                <div class="card col col-12 col-md-6">
                    <div class="card-body">
                        <div class="card-text">
                            <h5>@instrument.Instrument.Name</h5>
                            <div>
                                <h6>Level <span class="badge badge-primary">@instrument.Level</span></h6>
                            </div>
                            @foreach (var genre in instrument.UserInstrumentGenres)
                            {
                                <span class="badge badge-primary">
                                    @genre.Genre.GenreName
                                </span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="border-top bg-white w-100 mb-3 border-bottom">
            <p class="fw-bold main-blue mt-3">@user.UserName's ensembles </p>
            @* Connect ensembles to a user *@
        </div>
    }
</section>