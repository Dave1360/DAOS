@model MusicDating.Models.Entities.ApplicationUser
@{
    ViewData["Title"] = "Edit Profile";
}
<div>
    <a class="btn rounded border-lightgrey shadow-sm m-2 oswald" asp-action="Index">Tilbage</a>
</div>
<h1>Rediger profil</h1>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
            <h4>Navn</h4>
            <div class="row">
                <div class="form-group col-6">
                    <input asp-for="FirstName" class="form-control" placeholder="Fornavn"/>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <input asp-for="LastName" class="form-control" placeholder="Efternavn"/>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <h4>Profilbeskrivelse</h4>
            <div class="form-group">
                <textarea asp-for="Profile.Description" placeholder="Skriv eventuelt kort om din musikalske erfaring eller hvad du søger..." cols="30" rows="7" class="form-control" style="resize: none;"></textarea>
            </div>
            <h4>Område</h4>
            <div class="row">
                <div class="form-group col-4">
                    <input asp-for="Profile.ZipCode" placeholder="Postnr." class="form-control" />
                    <span asp-validation-for="Profile.ZipCode" class="text-danger"></span>
                </div>
                <div class="form-group col-8">
                    <input asp-for="Profile.City" class="form-control" placeholder="By"/>
                    <span asp-validation-for="Profile.City" class="text-danger"></span>
                </div>
            </div>
            <h4>Kontaktoplysninger</h4>
            <p>Din mail-adresse og mobilnummer er kun synligt for andre hvis du på din profil har markeret at du søger nogle at spille med eller hvis du har et aktivt opslag.</p>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="PhoneNumber" class="form-control" placeholder="Mobilnummer"/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <h4>Profile Status</h4>
            <p>Søger du i øjeblikket nogle at spille med? Hvis du vælger 'søger ikke' vil din profil ikke dukke op når andre musikere laver en søgning</p>
            <div class="form-group">
                <label asp-for="Profile.Searching">Søger</label>
                <input type="radio" asp-for="Profile.Searching" value="true">
                <label asp-for="Profile.Searching">Søger ikke</label>
                <input type="radio" asp-for="Profile.Searching" value="false">
            </div>
            <input type="hidden" asp-for="Id" />
             <div class="form-group">
                <input type="submit" value="Gem profil" class="contact-button text-white btn btn-block rounded-x2 mb-3" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
