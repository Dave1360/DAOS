@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Edit Profile";
}

<div>
    <a class="btn rounded border-lightgrey shadow-sm m-2 oswald" asp-action="Index">Back to List</a>
</div>
<h1>Edit Profile</h1>
<hr />
@foreach (var user in Model) {
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
            <h4>Name</h4>
            <div class="row">
                <div class="form-group col-6">
                    <input asp-for="@user.FirstName" value="@user.FirstName" placeholder="Fornavn" class="form-control" />
                    <span asp-validation-for="@user.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <input asp-for="@user.LastName" value="@user.LastName" class="form-control" placeholder="Efternavn"/>
                    <span asp-validation-for="@user.LastName" class="text-danger"></span>
                </div>
            </div>
            <h4>Profile description</h4>
            <div class="form-group">
                <textarea name="Description" value="@user.Profile.Description" placeholder="Skriv eventuelt kort om din musikalske erfaring eller hvad du søger..." cols="30" rows="7" class="form-control" style="resize: none;"></textarea>
            </div>
            <h4>Område</h4>
            <div class="row">
                <div class="form-group col-4">
                    <input asp-for="@user.Profile.ZipCode" value="@user.Profile.ZipCode" placeholder="Postnr." class="form-control" />
                    <span asp-validation-for="@user.Profile.ZipCode" class="text-danger"></span>
                </div>
                <div class="form-group col-8">
                    <input asp-for="@user.Profile.City" value="@user.Profile.City" class="form-control" placeholder="By"/>
                    <span asp-validation-for="@user.Profile.City" class="text-danger"></span>
                </div>
            </div>
            <h4>Kontaktoplysninger</h4>
            <p>Din mail-adresse og mobilnummer er kun synligt for andre hvis du på din profil har markeret at du søger nogle at spille med eller hvis du har et aktivt opslag.</p>
            <div class="form-group">
                <input asp-for="@user.Email" value="@user.Email" class="form-control" placeholder="Email"/>
                <span asp-validation-for="@user.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="@user.Profile.PhoneNumber" value="@user.Profile.PhoneNumber" class="form-control" placeholder="Mobilnummer"/>
                <span asp-validation-for="@user.Profile.PhoneNumber" class="text-danger"></span>
            </div>
            <h4>Profile Status</h4>
            <input type="hidden" asp-for="@user.Id" />
             <div class="form-group">
                <input type="submit" value="Save" class="contact-button text-white btn btn-block rounded-x2 mb-3" />
            </div>
        </form>
    </div>
</div>
 }


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
